

<div class="container-fluid">
    <div class="menu-wrapper">
        <!-- Logo -->
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/logo/BaseLogo.png" alt="" style="width:160px;height:27px;"></a>
        </div>
        <!-- Main-menu -->
        <div class="main-menu d-none d-lg-block">
            <nav>
                <ul id="navigation">
                    @if (User.Identity.IsAuthenticated)
                    {
                        
                    }
                    <li><a asp-controller="Home" asp-action="Index">Ana Səhifə</a></li>
                    <li><a asp-controller="About" asp-action="Index">Haqqımızda</a></li>
                    <li>
                        <a href="#">İlkin Tələblər</a>
                        <ul class="submenu">
                            <li><a asp-controller="Prerequisite" asp-action="Index">İlkin Tələblər</a></li>
                            <li><a asp-controller="Motivation" asp-action="Index">Motivasiya məktubu</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">Əlaqə</a>
                        <ul class="submenu">
                            <li><a asp-controller="Contact" asp-action="Index">Bizmlə Əlaqə</a></li>
                            <li><a asp-controller="Faq" asp-action="Index">Faq</a></li>
                        </ul>
                    </li>
                    @* <li><a asp-controller="Contact" asp-action="Index">Əlaqə</a></li> *@
                </ul>
            </nav>
        </div>
        <!-- Header Right -->
        <div class="header-right">
            <ul>

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Student"))
                    {
                        <div class="dropdown show">
                            <a style="padding:9px; background-color:white; color:black;" href="#" class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-area="Student" asp-controller="Profile" asp-action="Index">Panelə keçid</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıxış et</a>
                            </div>
                        </div>
                    }
                    if (User.IsInRole("University"))
                    {
                        <div class="dropdown show">
                            <a style="padding:9px; background-color:white; color:black;" href="#" class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-area="UniversityPanel" asp-controller="Profile" asp-action="Index">Panelə keçid</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıxış et</a>
                            </div>
                        </div>
                    }
                    if(!User.IsInRole("Student") && !User.IsInRole("University"))
                    {
                        <div class="dropdown show">
                            <a style="padding:9px; background-color:white; color:black;" href="#" class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Panelə keçid</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıxış et</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <li> <a asp-controller="Account" asp-action="Login"><span class="flaticon-user"></span></a></li>
                }

            </ul>
        </div>
    </div>
    <!-- Mobile Menu -->
    <div class="col-12">
        <div class="mobile_menu d-block d-lg-none"></div>
    </div>
</div>
