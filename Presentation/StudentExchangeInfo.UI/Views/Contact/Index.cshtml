@model Contact
@{
    ViewBag.Title = "Əlaqə";
}


<!--? Hero Area Start-->
<div class="slider-area" style="height:120px;">
    <div class="single-slider slider-height2 ">
    </div>
</div>
<!--? Hero Area End-->


<!-- ================ contact section start ========M========= -->
<section class="contact-section" style="margin-top:-15px;">
    <div class="container">
        <div class="row">
            <div class="col-12 section-tmb-70 text-cittle enter">
                <h2 style="text-align:center;">Əlaqə</h2>
                <p style="text-align:center;">İrad, təklif, iş birlikləri üçün aşağıdakı formu dolduraraq bizimlə əlaqə saxlayın.</p>
            </div>
            <div class="col-lg-12">
                <form class="form-contact contact_form" method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <textarea asp-for="Message" class="form-control w-100" cols="30" rows="9" onfocus="this.placeholder = ''" placeholder=" Mesajınızı daxil edin"></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input asp-for="FullName" class="form-control valid" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Adınız və Soyadınız '" placeholder="Adınız və Soyadınız">
                                <span class="text-danger" asp-validation-for="FullName"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input asp-for="Email" class="form-control valid" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Elektron poçtunuz '" placeholder="Elektron poçtunuz">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input asp-for="Subject" class="form-control" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mətnin başlığı'" placeholder=" Mətnin başlığı">
                                <span class="text-danger" asp-validation-for="Subject"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm boxed-btn">Göndər</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- ================ contact section end ================= -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}