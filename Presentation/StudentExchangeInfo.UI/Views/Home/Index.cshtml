@{
    ViewData["Title"] = "Ana Səhifə";
}

@model HomeVM


<!--? slider Area Start -->
<div class="slider-area ">
    <div class="slider-active" style="background-image: url(../assets/img/@Model.Slider.Image)">
        <!-- Single Slider -->
        <div class="single-slider slider-height d-flex align-items-center slide-bg">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                        <div class="hero__caption">
                            <h1 data-animation="fadeInLeft" data-delay=".4s" data-duration="2000ms">@Model.Slider.Title</h1>
                            <p data-animation="fadeInLeft" data-delay=".7s" data-duration="2000ms">@Model.Slider.SubTitle</p>
                            <!-- Hero-btn -->
                            <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                <a href="industries.html" class="btn hero-btn">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Single Slider -->
    </div>

</div>
<!-- slider Area End-->
