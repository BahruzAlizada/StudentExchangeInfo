@model List<ExchangeProgram>

<div class="card mb-4">
    <!-- Account -->
    <div class="card-body">
        <img src="~/assets/img//university/@ViewBag.Image" class="d-block rounded" height="100" width="100" />
        <h5 style="margin-top:10px;">@ViewBag.Name</h5>
    </div>
    <hr class="my-0" />
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <p>Hal-hazırda heç bir mübadilə proqramı mövcud deyil.</p>
        }
        else
        {
            <div>
                <!-- Bordered Table -->
                <div class="card">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <h5>Mübadilə Proqramları aşağıdakılardır.</h5>
                        
                    </div>
                    <div class="card-body">
                        <div class="table-responsive text-nowrap">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Mübadilə Proqramı adı</th>
                                        <th style="text-align:right">Aksiyon</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ExchangeProgram item in Model)
                                    {
                                        <tr>
                                            <td>@item.ExchangeName</td>

                                           
                                            <td>
                                                <div style="display:flex;justify-content:flex-end">
                                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning  text-white" style="margin-right:10px;">Daha ətraflı tanış ol</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--/ Bordered Table -->
            </div>
        }
    </div>

    <!-- /Account -->
</div>

