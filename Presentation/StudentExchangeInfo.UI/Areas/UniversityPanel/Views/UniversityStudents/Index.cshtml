@model List<StudentVM>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <p>Tələbələr</p>
        @* <div>
        <a asp-action="Create" class="btn btn-success text-white" style="margin-right:10px"><i class='bx bx-plus'></i></a>
        </div> *@
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ad və Soyad</th>
                        <th>Elektron-poçt</th>
                        <th>Qeydiyyat Tarixi</th>
                        <th style="text-align:right">Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (StudentVM item in Model)
                    {
                        <tr>
                            <td>@item.Name @item.Surname</td>
                            <td>@item.Email</td>
                            <td>@item.Created</td>
                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning text-white" style="margin-right:10px;"><i class='bx bxs-user-detail'></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="pagnation my-2">
                    <ul style="list-style:none;display:flex;justify-content:center;">

                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            <li class="page-item  @(i == ViewBag.CurrentPage ? "active" : "")"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }

                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />
