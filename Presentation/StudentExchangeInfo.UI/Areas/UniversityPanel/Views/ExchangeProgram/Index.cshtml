@model List<ExchangeProgram>

<div class="card mb-4">
    <!-- Account -->
    <div class="card-body">
        <img src="~/assets/img//university/@ViewBag.Image" class="d-block rounded" height="100" width="100" />
        <h5 style="margin-top:10px;">@ViewBag.Name</h5>
    </div>
    <hr class="my-0" />
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <a asp-action="Create" class="btn btn-success my-2">Əlavə et</a>
            <p>Hal-hazırda heç bir mübadilə proqramı mövcud deyil.</p>
        }
        else
        {
            <div>
                <!-- Bordered Table -->
                <div class="card">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <p>Mübadilə Proqramları</p>
                        <div>
                            <a asp-action="Create" class="btn btn-success text-white" style="margin-right:10px"><i class='bx bx-plus'></i></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive text-nowrap">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Mübadilə Proqramı adı</th>
                                        <th>Status</th>
                                        <th style="text-align:right">Aksiyonlar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ExchangeProgram item in Model)
                                    {
                                        <tr>
                                            <td>@item.ExchangeName</td>
                                           
                                            <td>
                                                @if (item.Status)
                                                {
                                                    <span style="padding:6px 4px; background-color:green; color:white;">Aktiv</span>
                                                }
                                                else
                                                {
                                                    <span style="padding:6px 4px; background-color:red; color:white;">Dekativ</span>
                                                }
                                            </td>
                                            <td>
                                                <div style="display:flex;justify-content:flex-end">
                                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning  text-white" style="margin-right:10px;">Ətraflı</a>
                                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary  text-white" style="margin-right:10px;">Yenilə</a>
                                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger text-white" style="margin-right:10px;">Status</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--/ Bordered Table -->
            </div>
        }
    </div>

    <!-- /Account -->
</div>

