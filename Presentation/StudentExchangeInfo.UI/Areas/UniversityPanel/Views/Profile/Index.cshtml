@model UniversityVM

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item">
                <a class="nav-link active" asp-action="Index" asp-route-username="@Model.UserName"><i class="bx bx-user me-1"></i> Profil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="ChangePassword"><i class='bx bxs-lock-open'></i> Şifrəni dəyiş</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Logout"><i class='bx bx-power-off'></i> Çıxış et</a>
            </li>

        </ul>
        <div class="card mb-4">
            <!-- Account -->
            <div class="card-body">
                <img src="~/assets/img//university/@Model.Image" class="d-block rounded" height="100" width="100" />
                <h5 style="margin-top:10px;">@Model.Name</h5>
                <span style="font-size:14px;margin-top:-11px;">Tələbələrin sayı - @Model.StudentCount (<a style="color:red;text-decoration:underline" asp-controller="UniversityStudents" asp-action="Index">Tələbələri gör</a>)</span>
            </div>
            <hr class="my-0" />
            <span style="margin-left:15px;">Hesabı yenilədkidən sonra hesabdan çıxış ediləcəkdir.</span><hr />
            <div class="card-body">
                <form id="formAccountSettings" method="post">
                    <div class="row">
                       
                        <div class="mb-3 col-md-6">
                            <label asp-for="Email" for="email" class="form-label">Elektron Poçt</label>
                            <input asp-for="Email" class="form-control" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-success me-2">Yenilə</button>
                    </div>
                </form>
            </div>

            <!-- /Account -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}