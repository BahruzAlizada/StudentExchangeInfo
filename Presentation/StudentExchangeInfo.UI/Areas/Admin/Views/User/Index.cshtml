@model List<VebUserVM>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <p>Veb-sayt istifadəçiləri</p>
        <div>
            <a asp-action="Create" class="btn btn-success text-white" style="margin-right:10px"><i class='bx bx-plus'></i></a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Email</th>
                        <th>İstifadəçi adı</th>
                        <th>Rol</th>
                        <th>Tarix</th>
                        <th>Status</th>
                        <th style="text-align:right">Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (VebUserVM item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.SurName</td>
                            <td>@item.Email</td>
                            <td>@item.Username</td>
                            <td>@item.Role</td>
                            <td>@item.Created.ToShortDateString()</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span style="padding:6px 4px; background-color:green; color:white;">Aktiv</span>
                                }
                                else
                                {
                                    <span style="padding:6px 4px; background-color:red; color:white;">Dekativ</span>
                                }
                            </td>
                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                    <a asp-action="RoleChange" asp-route-id="@item.Id" class="btn btn-secondary text-white" style="margin-right:10px;"><i class='bx bxl-microsoft-teams'></i></a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary text-white" style="margin-right:10px;"><i class='bx bxs-pencil'></i></a>
                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-warning text-white" style="margin-right:10px;"><i class='bx bx-loader-circle'></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white" style="margin-right:10px;"><i class='bx bxs-trash-alt'></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />
