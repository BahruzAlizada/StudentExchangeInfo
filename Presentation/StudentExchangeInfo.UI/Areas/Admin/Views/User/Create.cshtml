@model VebUserCreateVM

<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Veb sayt admin</h5>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <form method="post">

                    <div class="row g-2">
                        <div class="col-6 form-group">
                            <label asp-for="Name" class="form-label">Ad</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-6  form-group">
                            <label asp-for="SurName" class="form-label">Soyad</label>
                            <input asp-for="SurName" class="form-control" />
                            <span asp-validation-for="SurName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="UserName" class="form-label">İstifadəçi adı</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>


                    <div class="mb-3 form-group">
                        <label asp-for="Password" class="form-label">Şifrə</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="CheckPassword" class="form-label">Şifrənin təkrarı</label>
                        <input asp-for="CheckPassword" class="form-control" />
                        <span asp-validation-for="CheckPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group my-4">
                        <label>Rol</label>
                        <select class="form-control" name="roleId">
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role.Id">@role.Name</option>
                            }
                        </select>
                    </div>


                    <button type="submit" class="btn btn-primary">Yarat</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri qayıt</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}